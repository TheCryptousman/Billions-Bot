    <script>
        // Canvas setup
        const canvas = document.getElementById('memeCanvas');
        const ctx = canvas.getContext('2d');
        let currentColor = '#000000';
        let currentFont = 'Arial';
        let isDrawing = false;
        let lastX = 0;
        let lastY = 0;

        // Initialize canvas with white background
        ctx.fillStyle = 'white';
        ctx.fillRect(0, 0, canvas.width, canvas.height);

        // Drawing functionality
        canvas.addEventListener('mousedown', startDrawing);
        canvas.addEventListener('mousemove', draw);
        canvas.addEventListener('mouseup', stopDrawing);
        canvas.addEventListener('mouseout', stopDrawing);

        function startDrawing(e) {
            isDrawing = true;
            [lastX, lastY] = [e.offsetX, e.offsetY];
        }

        function draw(e) {
            if (!isDrawing) return;
            ctx.beginPath();
            ctx.moveTo(lastX, lastY);
            ctx.lineTo(e.offsetX, e.offsetY);
            ctx.strokeStyle = currentColor;
            ctx.lineWidth = 2;
            ctx.lineCap = 'round';
            ctx.stroke();
            [lastX, lastY] = [e.offsetX, e.offsetY];
        }

        function stopDrawing() {
            isDrawing = false;
        }

        // Color picker
        document.querySelectorAll('.color-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.color-option').forEach(opt => opt.classList.remove('active'));
                this.classList.add('active');
                currentColor = this.getAttribute('data-color');
            });
        });

        // Font selector
        document.getElementById('fontSelector').addEventListener('change', function() {
            currentFont = this.value;
        });

        // Add text functionality
        document.getElementById('addText').addEventListener('click', function() {
            document.getElementById('textInput').focus();
        });

        document.getElementById('addBNSText').addEventListener('click', function() {
            const bnsTexts = [
                "BNS to the Moon! üöÄ",
                "Billions Network = Billions Gains üí∞",
                "Staking $BNS = Winning üèÜ",
                "The Future is BNS üîÆ",
                "#BNS #BillionsNetwork"
            ];
            const randomText = bnsTexts[Math.floor(Math.random() * bnsTexts.length)];
            addTextToCanvas(randomText);
        });

        document.getElementById('applyTextBtn').addEventListener('click', function() {
            const text = document.getElementById('textInput').value;
            if (text) {
                addTextToCanvas(text);
                document.getElementById('textInput').value = '';
            }
        });

        function addTextToCanvas(text) {
            ctx.font = bold 30px ${currentFont};
            ctx.fillStyle = currentColor;
            ctx.textAlign = 'center';
            ctx.fillText(text, canvas.width / 2, 50);
        }

        // BNS Elements
        document.querySelectorAll('.bns-element').forEach(element => {
            element.addEventListener('click', function() {
                const type = this.getAttribute('data-element');
                addBNSElement(type);
            });
        });

        function addBNSElement(type) {
            ctx.font = 'bold 24px Arial';
            ctx.fillStyle = currentColor;
            ctx.textAlign = 'center';
            
            switch(type) {
                case 'logo':
                    ctx.fillText('üöÄ BNS', canvas.width / 2, canvas.height - 50);
                    break;
                case 'token':
                    ctx.fillText('$BNS Token', canvas.width / 2, canvas.height - 80);
                    break;
                case 'rocket':
                    ctx.fillText('üöÄ', canvas.width - 50, 50);
                    break;
                case 'bull':
                    ctx.fillText('üêÇ', 50, canvas.height - 50);
                    break;
                case 'chart':
                    drawChart();
                    break;
                case 'moon':
                    ctx.fillText('üåï', canvas.width - 50, canvas.height - 50);
                    break;
            }
        }

        function drawChart() {
            ctx.strokeStyle = '#06d6a0';
            ctx.lineWidth = 3;
            ctx.beginPath();
            ctx.moveTo(100, 400);
            ctx.lineTo(200, 300);
            ctx.lineTo(300, 350);
            ctx.lineTo(400, 250);
            ctx.lineTo(500, 300);
            ctx.lineTo(600, 200);
            ctx.stroke();
            
            ctx.fillStyle = '#06d6a0';
            ctx.font = 'bold 20px Arial';
            ctx.fillText('BNS Growth Chart üìà', 350, 180);
        }

        // Template functionality
        document.querySelectorAll('.template-item').forEach(item => {
            item.addEventListener('click', function() {
                const template = this.getAttribute('data-template');
                loadTemplate(template);
            });
        });

        function loadTemplate(template) {
            // Clear canvas
            ctx.fillStyle = 'white';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            ctx.font = 'bold 30px Impact';
            ctx.fillStyle = 'black';
            ctx.textAlign = 'center';
            
            switch(template) {
                case 'drake':
                    // Draw simple Drake template representation
                    ctx.fillText("DRAKE TEMPLATE", canvas.width / 2, 100);
                    ctx.fillText("üëç Using BNS", canvas.width / 2, 200);
                    ctx.fillText("üëé Not using BNS", canvas.width / 2, 300);
                    break;
                case 'distracted':
                    ctx.fillText("DISTRACTED BOYFRIEND", canvas.width / 2, 100);
                    ctx.fillText("üëÄ Looking at BNS gains", canvas.width / 2, 250);
                    break;
                case 'button':
                    ctx.fillText("TWO BUTTONS", canvas.width / 2, 100);
                    ctx.fillText("üü• Buy BNS now", 200, 300);
                    ctx.fillText("üü¶ Regret later", 600, 300);
                    break;
                case 'blank':
                    // Just clear canvas
                    break;
            }
        }

        // Image upload
        document.getElementById('imageUpload').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const img = new Image();
                    img.onload = function() {
                        // Clear canvas and draw image
                        ctx.fillStyle = 'white';
                        ctx.fillRect(0, 0, canvas.width, canvas.height);
                        ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
                    }
                    img.src = event.target.result;
                }
                reader.readAsDataURL(file);
            }
        });

        // Control buttons
        document.getElementById('clearBtn').addEventListener('click', function() {
            ctx.fillStyle = 'white';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
        });

        document.getElementById('undoBtn').addEventListener('click', function() {
            // Simple undo - redraw canvas (in real app, you'd use more sophisticated undo)
            alert('Undo feature would be implemented with proper state management');
        });

        document.getElementById('downloadBtn').addEventListener('click', function() {
            const link = document.createElement('a');
            link.download = 'bns-meme.png';
            link.href = canvas.toDataURL();
            link.click();
        });

        document.getElementById('shareBtn').addEventListener('click', function() {
            const dataUrl = canvas.toDataURL();
            // In a real app, you would integrate with social media APIs
            alert('Share feature would connect to Twitter/Discord APIs. Image is ready to download!');
        });

        // Add some initial BNS branding
        ctx.fillStyle = '#7c3aed';
        ctx.font = 'bold 40px Arial';
        ctx.textAlign = 'center';
        ctx.fillText('BNS Meme Studio', canvas.width / 2, canvas.height / 2);
        ctx.font = '20px Arial';
        ctx.fillText('Create something amazing!', canvas.width / 2, canvas.height / 2 + 40);
    </script>
</body>
</html>
